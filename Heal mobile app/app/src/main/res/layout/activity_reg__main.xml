<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
       android:background="@drawable/bg1"
    tools:context="com.virtuosoace.heal.Reg_Main">

    <ImageButton
        android:id="@+id/backtofirst"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toStartOf="@+id/fname"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/cardview_shadow_start_color"
        app:srcCompat="?android:attr/actionModeCloseDrawable" />


   <ImageView
       android:id="@+id/imageView"
       android:layout_width="120dp"
       android:layout_height="120dp"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="14dp"
       app:srcCompat="@drawable/register" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Registration"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="20dp"
        android:visibility="visible"
        android:id="@+id/textView" />

    <ImageView
        android:id="@+id/patient"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="78dp"
        android:layout_toEndOf="@+id/backtofirst"
        android:clickable="true"
        app:srcCompat="@drawable/patient1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient"
        android:layout_toStartOf="@+id/textView"
        android:text="Patient"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/doc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp"
        android:clickable="true"
        android:elevation="20dp"
        android:src="@drawable/doc3"
        tools:ignore="OnClick" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/patient"
        android:layout_toEndOf="@+id/textView"
        android:text="Doctor"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>

