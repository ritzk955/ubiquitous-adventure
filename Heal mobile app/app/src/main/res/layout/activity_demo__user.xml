<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.virtuosoace.heal.Demo_User">

    <ImageButton
        android:id="@+id/backtomain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toStartOf="@+id/fname"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/cardview_shadow_start_color"
        app:srcCompat="?android:attr/actionModeCloseDrawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/textView19"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PULSE RATE"
            android:textSize="20dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp" >

            <TextView
                android:id="@+id/pulserate1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="Pulse Rate" />


        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView21"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HUMIDITY"
            android:textSize="20dp"/>
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/Humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Humidity" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView20"
            android:textAlignment="center"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BODY TEMPERATURE"
            android:textSize="20dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">

            <TextView
                android:id="@+id/BodyTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Body Temperature" />

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/checkBox2"
            android:layout_below="@+id/checkBox2"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/mybutton"
            android:elevation="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="SOS"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/imageButton3"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="false"
            android:background="@android:color/transparent"
            android:cropToPadding="false"
            android:elevation="10dp"
            app:srcCompat="@drawable/bluetooth_48px" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:text="Connect your HEAL device First" />

</RelativeLayout>
