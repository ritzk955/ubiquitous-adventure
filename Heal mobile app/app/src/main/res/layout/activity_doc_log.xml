<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.virtuosoace.heal.DocLog">

    <ImageButton
        android:id="@+id/backtodocinfo"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_alignTop="@+id/textView4"
        android:layout_toStartOf="@+id/fname"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/cardview_shadow_start_color"
        app:srcCompat="?android:attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@+id/backtodocinfo"
        android:layout_marginTop="14sp"
        android:layout_toEndOf="@+id/backtodocinfo"
        app:srcCompat="@drawable/user_pic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="130sp"
        android:layout_height="30sp"
        android:layout_alignEnd="@+id/textView11"
        android:layout_alignTop="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:fontFamily="sans-serif"
        android:hint="NAME"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_above="@+id/textView16"
        android:layout_below="@+id/textView10"
        android:layout_toEndOf="@+id/imageView7"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:hint="AGE"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:hint="DISEAEAS"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView7"
        android:layout_below="@+id/imageView7"
        android:layout_marginTop="26sp"
        android:fontFamily="sans-serif"
        android:text="DEVICE CONNECTION :"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toEndOf="@+id/textView17"
        android:hint="ON/OFF"
        android:textSize="15sp"/>

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="300sp"

        android:layout_height="110sp"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="30sp"
        android:columnCount="3"
        android:rowCount="2">

        <TextView
            android:layout_width="90sp"
            android:layout_height="30sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:text="Pluserate"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="90sp"
            android:layout_height="30sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:text="Humidity"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="90sp"
            android:layout_height="30sp"

            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:gravity="center"
            android:text="Tempareture"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="90sp"
            android:layout_height="40sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            app:cardCornerRadius="20sp"
            app:cardElevation="8sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="BPM"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="90sp"
            android:layout_height="40sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            app:cardCornerRadius="20sp"
            app:cardElevation="8sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="%"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="90sp"
            android:layout_height="40sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="1sp"
            app:cardCornerRadius="20sp"
            app:cardElevation="8sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="*C"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

    </GridLayout>

    <Button
        android:id="@+id/logbtn"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_below="@+id/gridLayout2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton"
        android:elevation="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="medical log"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_below="@+id/logbtn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton"
        android:layout_marginTop="17sp"
        android:drawablePadding="1sp"
        android:padding="4sp"
        android:drawableLeft="@android:drawable/sym_call_outgoing"
        android:text="Voice call" />

</RelativeLayout>
