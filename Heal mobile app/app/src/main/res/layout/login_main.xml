<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg1"
    tools:context="com.virtuosoace.heal.LoginMainActivity">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:src="@drawable/heal"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="HEAL"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Your Healthcare Companion"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/textView3" />

    // Main input of username and  password//


    <EditText
        android:id="@+id/edittextemailid"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="12dp"
        android:hint="emailid"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edittextmobno"
        android:layout_width="266dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/edittextemailid"
        android:layout_below="@+id/edittextemailid"
        android:layout_marginTop="21dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:drawableLeft="@drawable/key"
        android:drawablePadding="12dp"
        android:ems="10"
        android:focusable="true"
        android:hint="mobno"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edittextmobno"
        android:layout_below="@+id/edittextmobno"
        android:layout_marginTop="13dp"
        android:text="Remember Me"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_below="@+id/checkBox2"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:background="@drawable/mybutton"
        android:elevation="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/loginbtn"
        android:layout_alignEnd="@+id/edittextmobno"
        android:background="@drawable/mybutton"
        android:elevation="20dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="SignUp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton"
        android:elevation="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Try without Registration"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:id="@+id/demobtn" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:clickable="false"
        android:textColorHighlight="#EC7063"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Forgot Username/Password ???"
        android:textSize="15dp"
        android:textStyle="bold" />
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>