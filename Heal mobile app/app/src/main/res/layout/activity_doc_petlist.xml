<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context="com.virtuosoace.heal.DocPetlist">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:layout_marginStart="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/searchView" >
    </SearchView>

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="340sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchView"
        android:layout_marginTop="39sp"
        android:scrollbars="vertical"
        android:id="@+id/recyclerView">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/sortbtn"
        android:layout_width="120sp"
        android:layout_height="40sp"
        android:layout_alignStart="@+id/recyclerView"
        android:layout_below="@+id/recyclerView"
        android:layout_gravity="center"
        android:layout_marginTop="16sp"
        android:background="@drawable/mybutton"
        android:elevation="20sp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Sort"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/searchView"
        android:layout_alignTop="@+id/sortbtn"
        android:clickable="true"
        app:backgroundTint="@color/cardview_light_background"
        app:srcCompat="@android:drawable/ic_input_add" />


</RelativeLayout>
